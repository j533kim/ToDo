<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_metadata"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        card_view:cardElevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/item_metadata1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Task"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/day_counter"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:text="No D-Day"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_metadata4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_metadata1"
                android:textAlignment="center"
                android:gravity="center">

                <RatingBar
                    android:id="@+id/item_importance"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:clickable="false"
                    android:numStars="5"
                    android:stepSize="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_metadata2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/item_metadata4">
                <TextView
                    android:id="@+id/item_details"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_buttons"
                android:layout_below="@+id/item_metadata2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@android:drawable/ic_menu_delete"
                    android:id="@+id/delete_button"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:id="@+id/edit_button"/>
                <ImageView
                    android:src="@android:drawable/ic_menu_today"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:id="@+id/calendar_button"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:id="@+id/checkbox"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>