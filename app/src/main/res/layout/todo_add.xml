<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_metadata_edit"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        card_view:cardElevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/item_metadata1_edit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/item_task_edit"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:hint="Task Name (Required)"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_metadata3_edit"
                android:orientation="horizontal"
                android:layout_below="@+id/item_metadata1_edit"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/item_importance_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:numStars="5"
                    android:stepSize="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_metadata4_edit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/item_metadata3_edit">
                <EditText
                    android:id="@+id/item_details_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Details/Description"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_metadata5_edit"
                android:layout_below="@+id/item_metadata4_edit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="Deadline:"/>
                <TextView
                    android:id="@+id/item_dateEnd_edit"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="Date"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/item_timeEnd_edit"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="Time"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_buttons_edit"
                android:layout_below="@+id/item_metadata5_edit"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:text="Submit"
                    android:layout_marginRight="5dp" />
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:text="Cancel"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>